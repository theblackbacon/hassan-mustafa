{% comment %}
  ============================================================================
  Shop the Look – Custom Product Grid Section
  ============================================================================
  A 3×2 image grid where each cell represents a product chosen in the
  Shopify Theme Customizer.  Hovering a cell reveals a "+" hotspot button.
  Clicking the hotspot opens an inline popup card with:
    • Product thumbnail, title, price & description
    • Dynamically-rendered variant options (buttons / dropdown)
    • A fully functional "Add to Cart" button
  Special rule: adding a variant with *both* "Black" colour AND "Medium"
  size also auto-adds the "Soft Winter Jacket" product to the cart.
  Dependencies: product-grid-popup.js (vanilla JS, no jQuery).
{% endcomment %}

{%- comment -%} ── Section wrapper ── {%- endcomment -%}
<div class="stl" data-section-id="{{ section.id }}">

  {%- comment -%} ── Heading ── {%- endcomment -%}
  <div class="stl__header">
    <h2 class="stl__heading">{{ section.settings.heading }}</h2>
  </div>

  {%- comment -%} ── 3 × 2 Product image grid ── {%- endcomment -%}
  <div class="stl__grid">
    {%- for block in section.blocks -%}
      {%- assign product = block.settings.product -%}
      <div class="stl__cell" {{ block.shopify_attributes }}>
        {%- if product != blank -%}
          <div class="stl__image-wrap">
            {%- if product.featured_image -%}
              <img
                class="stl__image"
                src="{{ product.featured_image | image_url: width: 800 }}"
                srcset="
                  {{ product.featured_image | image_url: width: 400 }} 400w,
                  {{ product.featured_image | image_url: width: 600 }} 600w,
                  {{ product.featured_image | image_url: width: 800 }} 800w
                "
                sizes="(max-width: 480px) 100vw, (max-width: 1024px) 50vw, 33vw"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                draggable="false"
              >
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'stl__placeholder' }}
            {%- endif -%}

            {%- comment -%} Hotspot "+" button – visible on hover ─ {%- endcomment -%}
            <button
              class="stl__hotspot js-stl-hotspot"
              type="button"
              data-product-handle="{{ product.handle }}"
              aria-label="{{ 'Quick view' }} {{ product.title | escape }}"
            >
              <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
                <line x1="7" y1="1" x2="7" y2="13" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <line x1="1" y1="7" x2="13" y2="7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
          </div>
        {%- else -%}
          {%- comment -%} Empty block placeholder (visible in editor) {%- endcomment -%}
          <div class="stl__image-wrap stl__image-wrap--empty">
            {{ 'product-1' | placeholder_svg_tag: 'stl__placeholder' }}
          </div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>

  {%- comment -%}
    ── Product popup card ──
    Positioned absolutely over the grid. Populated dynamically via JS.
  {%- endcomment -%}
  <div class="stl__popup" id="stlPopup" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="stl__popup-card">
      {%- comment -%} Close button {%- endcomment -%}
      <button class="stl__popup-close js-stl-close" type="button" aria-label="Close">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M12 4L4 12M4 4l8 8" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
        </svg>
      </button>

      <div class="stl__popup-body">
        {%- comment -%} Thumbnail {%- endcomment -%}
        <div class="stl__popup-thumb">
          <img src="" alt="" id="stlPopupImg" />
        </div>

        {%- comment -%} Details column {%- endcomment -%}
        <div class="stl__popup-details">
          <h3 class="stl__popup-title" id="stlPopupTitle"></h3>
          <p  class="stl__popup-price" id="stlPopupPrice"></p>
          <p  class="stl__popup-desc"  id="stlPopupDesc"></p>

          {%- comment -%} Variant selectors (rendered by JS) {%- endcomment -%}
          <div class="stl__popup-variants" id="stlPopupVariants"></div>

          {%- comment -%} Add-to-cart form {%- endcomment -%}
          <form id="stlAddToCartForm" class="stl__popup-form" action="/cart/add" method="post">
            <input type="hidden" name="id" id="stlVariantId" value="">
            <input type="hidden" name="quantity" value="1">

            <button type="submit" class="stl__popup-atc" id="stlAtcBtn">
              <span class="stl__popup-atc-text">ADD TO CART</span>
              <svg class="stl__popup-atc-arrow" width="24" height="12" viewBox="0 0 24 12" fill="none" aria-hidden="true">
                <line x1="0" y1="6" x2="22" y2="6" stroke="currentColor" stroke-width="1.5"/>
                <polyline points="17,1 22,6 17,11" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{% comment %} ================================================================
   Styles – scoped to .stl  (Shop-the-Look)
   ================================================================ {% endcomment %}
<style>
  /* ── Section layout ── */
  .stl {
    position: relative;
    padding: 48px 0;
    background: #f5f5f5;
  }
  .stl__header {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px 36px;
  }
  .stl__heading {
    font-size: 28px;
    font-weight: 400;
    font-style: italic;
    font-family: serif;
    color: #1a1a1a;
    margin: 0;
  }

  /* ── 3-column grid ── */
  .stl__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ── Individual cell ── */
  .stl__cell {
    position: relative;
  }
  .stl__image-wrap {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    background: #e8e8e8;
  }
  .stl__image-wrap--empty {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .stl__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }
  .stl__image-wrap:hover .stl__image {
    transform: scale(1.03);
  }
  .stl__placeholder {
    width: 60%;
    height: 60%;
    opacity: 0.35;
  }

  /* ── Hotspot "+" button ── */
  .stl__hotspot {
    position: absolute;
    top: 50%;
    left: 50%;
    translate: -50% -50%;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.92);
    border: 2px solid rgba(255, 255, 255, 0.6);
    color: #1a1a1a;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: scale(0.7);
    transition: opacity 0.25s ease, transform 0.25s ease, box-shadow 0.25s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
    z-index: 2;
    padding: 0;
  }
  .stl__image-wrap:hover .stl__hotspot,
  .stl__hotspot:focus-visible {
    opacity: 1;
    transform: scale(1);
  }
  .stl__hotspot:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.28);
    background: #fff;
  }

  /* ── Popup overlay ── */
  .stl__popup {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(0,0,0,0.45);
    align-items: center;
    justify-content: center;
    padding: 20px;
  }
  .stl__popup[aria-hidden="false"] {
    display: flex;
  }

  /* ── Popup card ── */
  .stl__popup-card {
    position: relative;
    background: #fff;
    width: 100%;
    max-width: 560px;
    box-shadow: 0 12px 48px rgba(0,0,0,0.18);
    border-radius: 2px;
    animation: stlFadeIn 0.22s ease;
  }
  @keyframes stlFadeIn {
    from { opacity: 0; transform: translateY(8px) scale(0.97); }
    to   { opacity: 1; transform: translateY(0) scale(1); }
  }

  /* ── Close button ── */
  .stl__popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 28px;
    height: 28px;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    z-index: 3;
    border-radius: 50%;
    transition: background 0.15s;
    padding: 0;
  }
  .stl__popup-close:hover {
    background: rgba(0,0,0,0.06);
  }

  /* ── Popup body layout ── */
  .stl__popup-body {
    display: flex;
    gap: 0;
  }

  /* ── Thumbnail ── */
  .stl__popup-thumb {
    flex: 0 0 140px;
    min-height: 140px;
    background: #f0f0f0;
    overflow: hidden;
  }
  .stl__popup-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* ── Details column ── */
  .stl__popup-details {
    flex: 1;
    padding: 20px 24px 24px 20px;
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .stl__popup-title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 4px;
    color: #1a1a1a;
    line-height: 1.3;
  }
  .stl__popup-price {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 10px;
    color: #1a1a1a;
  }
  .stl__popup-desc {
    font-size: 11px;
    line-height: 1.7;
    color: #777;
    margin: 0 0 16px;
    /* Clamp long descriptions */
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* ── Variant selectors ── */
  .stl__popup-variants {
    margin-bottom: 16px;
  }
  .stl__variant-group {
    margin-bottom: 14px;
  }
  .stl__variant-label {
    display: block;
    font-size: 12px;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 8px;
  }

  /* Buttons (e.g. Color) */
  .stl__variant-btns {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  .stl__variant-btn {
    padding: 8px 22px;
    border: 1.5px solid #d6d6d6;
    background: #fff;
    color: #1a1a1a;
    font-size: 13px;
    font-family: inherit;
    cursor: pointer;
    transition: border-color 0.15s, background 0.15s, color 0.15s;
    border-radius: 0;
    min-width: 64px;
    text-align: center;
  }
  .stl__variant-btn:hover {
    border-color: #1a1a1a;
  }
  .stl__variant-btn.is-active {
    border-color: #1a1a1a;
    border-left: 3px solid #1a1a1a;
  }

  /* Dropdown (e.g. Size) */
  .stl__variant-select {
    width: 100%;
    padding: 10px 14px;
    border: 1.5px solid #d6d6d6;
    background: #fff;
    font-size: 13px;
    font-family: inherit;
    cursor: pointer;
    appearance: none;
    border-radius: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1l4 4 4-4' stroke='%23333' stroke-width='1.4' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 14px center;
    padding-right: 36px;
  }
  .stl__variant-select:focus {
    outline: none;
    border-color: #1a1a1a;
  }

  /* ── Add to Cart button ── */
  .stl__popup-atc {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 14px;
    width: 100%;
    padding: 14px 20px;
    background: #1a1a1a;
    color: #fff;
    border: none;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1.8px;
    text-transform: uppercase;
    cursor: pointer;
    transition: background 0.2s, opacity 0.2s;
    border-radius: 0;
    font-family: inherit;
    margin-top: auto;
  }
  .stl__popup-atc:hover {
    background: #333;
  }
  .stl__popup-atc:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  .stl__popup-atc-arrow {
    flex-shrink: 0;
  }

  /* ── Responsive ── */
  @media (max-width: 1024px) {
    .stl__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 600px) {
    .stl {
      padding: 32px 0;
    }
    .stl__header {
      padding: 0 16px 24px;
    }
    .stl__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2px;
      padding: 0 16px;
    }
    .stl__popup-card {
      max-width: 100%;
    }
    .stl__popup-body {
      flex-direction: column;
    }
    .stl__popup-thumb {
      flex: 0 0 auto;
      height: 180px;
    }
  }
</style>

{%- comment -%} ── Load vanilla-JS handler ── {%- endcomment -%}
<script src="{{ 'product-grid-popup.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Shop the Look Grid",
  "tag": "section",
  "class": "stl-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "product_cell",
      "name": "Product",
      "limit": 6,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop the Look Grid",
      "blocks": [
        { "type": "product_cell" },
        { "type": "product_cell" },
        { "type": "product_cell" },
        { "type": "product_cell" },
        { "type": "product_cell" },
        { "type": "product_cell" }
      ]
    }
  ]
}
{% endschema %}

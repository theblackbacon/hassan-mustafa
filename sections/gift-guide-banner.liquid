{% comment %}
  ============================================================================
  Gift Guide Banner – Hero Section
  ============================================================================
  Layout (matching Figma design):
    ┌─────────────────────────────────────────────────────┐
    │ TISSO VISON    Find the ideal gift…   CHOOSE GIFT → │  ← top bar
    ├─────────────────────────────────────────────────────┤
    │                                                     │
    │  (background illustration image)                    │
    │                                                     │
    │  The Gift Guide                                     │
    │  Discover Joy: Your Ultimate Holiday…               │
    │  [SHOP NOW →]                                       │
    │                                                     │
    │  SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES …     │  ← tagline
    └─────────────────────────────────────────────────────┘
  All text is customizer-editable via schema settings.
{% endcomment %}

{%- comment -%} ── Section wrapper ── {%- endcomment -%}
<section class="gg-banner" data-section-id="{{ section.id }}">

  {%- comment -%} ── Top bar: logo · subtitle · CTA ── {%- endcomment -%}
  <div class="gg-banner__topbar">
    {%- if section.settings.logo_text != blank -%}
      <div class="gg-banner__logo">{{ section.settings.logo_text }}</div>
    {%- endif -%}

    {%- if section.settings.cta_label != blank -%}
      <span class="gg-banner__topbar-label">{{ section.settings.cta_label }}</span>
    {%- endif -%}

    {%- if section.settings.cta_text != blank -%}
      <a href="{{ section.settings.cta_link }}" class="gg-banner__cta-btn">
        {{ section.settings.cta_text }}
        <svg width="18" height="12" viewBox="0 0 18 12" fill="none" aria-hidden="true">
          <line x1="0" y1="6" x2="16" y2="6" stroke="currentColor" stroke-width="1.5"/>
          <polyline points="12,1 17,6 12,11" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {%- endif -%}
  </div>

  {%- comment -%} ── Main content area (background image behind) ── {%- endcomment -%}
  <div class="gg-banner__body">
    {%- if section.settings.background_image != blank -%}
      <img
        class="gg-banner__bg-img"
        src="{{ section.settings.background_image | image_url: width: 2400 }}"
        srcset="
          {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
          {{ section.settings.background_image | image_url: width: 1800 }} 1800w,
          {{ section.settings.background_image | image_url: width: 2400 }} 2400w
        "
        sizes="100vw"
        alt="{{ section.settings.heading | escape }}"
        loading="eager"
        fetchpriority="high"
        draggable="false"
      >
    {%- endif -%}

    <div class="gg-banner__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="gg-banner__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="gg-banner__desc">{{ section.settings.description }}</div>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="gg-banner__shop-btn">
          <span>{{ section.settings.button_text }}</span>
          <svg width="24" height="12" viewBox="0 0 24 12" fill="none" aria-hidden="true">
            <line x1="0" y1="6" x2="22" y2="6" stroke="currentColor" stroke-width="1.5"/>
            <polyline points="17,1 22,6 17,11" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} ── Bottom tagline bar ── {%- endcomment -%}
  {%- if section.settings.tagline != blank -%}
    <div class="gg-banner__tagline">{{ section.settings.tagline }}</div>
  {%- endif -%}
</section>

{% comment %} ================================================================
   Styles – scoped to .gg-banner
   ================================================================ {% endcomment %}
<style>
  /* ── Section reset ── */
  .gg-banner {
    position: relative;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  /* ── Top bar ── */
  .gg-banner__topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 18px 36px;
    position: relative;
    z-index: 2;
  }
  .gg-banner__logo {
    font-size: 16px;
    font-weight: 800;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #000;
    white-space: nowrap;
  }
  .gg-banner__topbar-label {
    font-size: 13px;
    color: #333;
    letter-spacing: 0.2px;
  }
  .gg-banner__cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 22px;
    background: #FFE500;
    color: #000;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1.2px;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
  }
  .gg-banner__cta-btn:hover {
    background: #ffd900;
    transform: translateY(-1px);
  }

  /* ── Body / background image ── */
  .gg-banner__body {
    position: relative;
    min-height: 520px;
    display: flex;
    align-items: flex-end;
    padding: 0 36px 48px;
  }
  .gg-banner__bg-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    pointer-events: none;
    z-index: 0;
  }

  /* ── Content overlay ── */
  .gg-banner__content {
    position: relative;
    z-index: 1;
    max-width: 560px;
  }
  .gg-banner__heading {
    font-family: serif;
    font-size: 72px;
    font-weight: 700;
    line-height: 1.05;
    margin: 0 0 20px;
    color: #000;
  }
  .gg-banner__desc {
    font-size: 14px;
    line-height: 1.75;
    color: #222;
    margin-bottom: 32px;
    max-width: 460px;
  }
  .gg-banner__desc p { margin: 0; }

  /* ── SHOP NOW button ── */
  .gg-banner__shop-btn {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    padding: 14px 30px;
    background: #000;
    color: #fff;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1.8px;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
  }
  .gg-banner__shop-btn span,
  .gg-banner__shop-btn svg {
    position: relative;
    z-index: 1;
  }
  .gg-banner__shop-btn:hover {
    background: #333;
    transform: translateY(-1px);
  }

  /* ── Bottom tagline ── */
  .gg-banner__tagline {
    text-align: center;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    color: #000;
    padding: 14px 36px;
    border-top: 1.5px solid #000;
    border-bottom: 1.5px solid #000;
    position: relative;
    z-index: 2;
  }

  /* ── Responsive ── */
  @media (max-width: 768px) {
    .gg-banner__topbar {
      flex-wrap: wrap;
      gap: 10px;
      padding: 14px 20px;
    }
    .gg-banner__topbar-label {
      order: 3;
      width: 100%;
      text-align: center;
      font-size: 12px;
    }
    .gg-banner__body {
      min-height: 400px;
      padding: 0 20px 36px;
    }
    .gg-banner__heading {
      font-size: 42px;
    }
    .gg-banner__desc {
      font-size: 13px;
    }
    .gg-banner__tagline {
      font-size: 9px;
      letter-spacing: 1.5px;
      padding: 12px 16px;
    }
  }
  @media (max-width: 480px) {
    .gg-banner__heading {
      font-size: 34px;
    }
    .gg-banner__body {
      min-height: 320px;
    }
  }
</style>

{% schema %}
{
  "name": "Gift Guide Banner",
  "tag": "section",
  "class": "gg-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Top Bar Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Bottom Tagline",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Illustration Image"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}
